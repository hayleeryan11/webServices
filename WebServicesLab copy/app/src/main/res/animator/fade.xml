<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator android:duration="2000">
        <propertyValuesHolder
            android:valueTo="@color/uwGold"
            android:valueFrom="@color/uwBlack"
            android:propertyName="backgroundColor" />
        <propertyValuesHolder
            android:propertyName="textColor"
            android:valueTo="@color/uwPurple"
            android:valueFrom="@color/uwWhite"/>
    </objectAnimator>

    <objectAnimator android:duration="2000">
        android:valueTo="@color/uwPurple"
        android:valueFrom="@color/uwGold"
        android:propertyName="backgroundColor" />
    </objectAnimator>

    <objectAnimator android:duration="2000">
        android:valueTo="@color/uwMetallic"
        android:valueFrom="@color/uwPurple"
        android:propertyName="backgroundColor" />
    </objectAnimator>

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.5" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="0.5"
        android:valueTo="1.0" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.0" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:repeatCount="infinite"
        android:valueTo="1.0"
        android:repeatMode="reverse" />

</set>